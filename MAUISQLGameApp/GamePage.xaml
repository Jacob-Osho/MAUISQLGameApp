<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUISQLGameApp.GamePage"
             Title="GamePage">
    <VerticalStackLayout Padding="20" Spacing="25">
        <VerticalStackLayout x:Name="Questionary">
            <Label  x:Name="QuestionLabel" VerticalOptions="Center"  HorizontalOptions="Center" FontSize="32" />
            <Entry x:Name="Answer" HorizontalOptions="Center"/>
            <Button x:Name="SubmitAnswer" Text="Answer" Clicked="SubmitAnswer_Clicked" HorizontalOptions="Center"/>
            <Label  x:Name="AnswerLabel" VerticalOptions="Center"  HorizontalOptions="Center" FontSize="32" />
        </VerticalStackLayout>

        <Label  x:Name="GameOverLabel" VerticalOptions="Center"  HorizontalOptions="Center" FontSize="32" />
        <Button x:Name="BackToMenue" Text="Back" Clicked="BackToMenue_Clicked" HorizontalOptions="Center" IsVisible="true"/>
    </VerticalStackLayout>
</ContentPage>