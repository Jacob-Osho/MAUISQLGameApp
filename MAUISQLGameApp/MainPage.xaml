<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUISQLGameApp.MainPage">

    <ContentView>
        <VerticalStackLayout Spacing="25"
                             Padding="50">
            <Label Text="This is ur  math game" FontSize="32" HorizontalOptions="Center"/>
            <Label Text="What game do u  wanna play ?" FontSize="32" HorizontalOptions="Center"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button  Grid.Column="0" Text="Addition"/>
                <Button  Grid.Column="1" Text="Substraction"/>
                <Button  Grid.Column="2" Text="Multyplication"/>
                <Button  Grid.Column="3" Text="Division"/>
                <Button  Grid.Row="1" Text="Previouse Games" Grid.ColumnSpan="4" BackgroundColor="ForestGreen"/>
            </Grid>
        </VerticalStackLayout>
       
    </ContentView>

</ContentPage>
